<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/potfolio"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghufrana Nousheen"
        android:layout_below="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/desg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOFTWARE ENGINEER"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:textStyle="italic|bold"
        android:textColor="@color/teal_200"
        />

    <TextView
        android:id="@+id/edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="education"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/desg"
        />

    <TextView
        android:id="@+id/col"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21dp"
        android:textStyle="bold|italic"
        android:textColor="@color/teal_200"
        android:text="SWEC"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/edu"
        />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/teal_200"
        android:textStyle="italic|bold"
        android:textAllCaps="true"
        android:text="Computer Science"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/col"
        />

    <TextView
        android:id="@+id/sessionyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-2022"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textStyle="italic|bold"
        android:textColor="@color/teal_200"
        android:layout_marginTop="10dp"
        android:layout_below="@id/col"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COURSES"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/branch"
        />
    <TextView
        android:id="@+id/org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skilligence"
        android:textSize="20dp"
        android:textColor="@color/teal_200"
        android:textStyle="italic|bold"
        android:layout_below="@id/course"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/coursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/org"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/teal_200"
        android:textStyle="italic|bold"
        android:textSize="15dp"
        android:text="ANDROID DEVELOPMENT"

        />
    <TextView
        android:id="@+id/courseyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_200"
        android:textStyle="italic|bold"
        android:textSize="20dp"
        android:text="2021"
        android:layout_below="@id/org"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/opengtb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursename"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#6F10E3"
        android:padding="14dp"
        android:text="OPEN GITHUB"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/openlnkdn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursename"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#FF6200EE"
        android:padding="14dp"
        android:text="OPEN LINKEDIN"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>